        <a class="image remove" href="../profile"><img id="profile_pic" src="/images/pfp.jpg" alt="Profile"/></a>
        <!-- Dropdown for small screens -->
        <div class="dropdown">
            <button class="dropbtn">â˜° Menu</button>
